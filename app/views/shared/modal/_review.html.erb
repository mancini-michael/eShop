<% if user_signed_in? %>
  <div class="modal fade" id="review" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <button class="btn-close m-0" data-bs-dismiss="modal" aria-label="Close"></button>
          <h5 class="modal-title mx-auto">
            <span class="fw-bold">Valuta <%= @user.first_name %> <%= @user.last_name %></span>
          </h5>
        </div>
        <div class="modal-body py-4">
          <div class="mb-3">
            <h5 class="mb-0">Aggiungi una valutazione da 1 a 5.</h5>
          </div>
          <%= form_for(:review, url: create_review_path) do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :seller_id, value: Seller.find_by(user_id: @user).id %>
              <div class="form-floating mb-3">
                <%= f.number_field :rating, in: 1..5, class: "form-control", placeholder: "rating" %>
                <%= f.label :rating %>
              </div>
            <%= f.submit "Continua", class: "modal-btn p-2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
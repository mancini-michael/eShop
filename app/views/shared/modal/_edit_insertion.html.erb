<div class="modal fade" id="edit<%= insertion.id %>" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <%# modal header %>
      <div class="modal-header">
        <button class="btn-close position-absolute m-0" data-bs-dismiss="modal"></button>
        <div class="d-flex flex-column align-items-center justify-content-center w-100">
          <h5 class="modal-title fw-bold mx-auto">Modifica</h5>
        </div>
      </div>

      <div class="modal-body py-3">
        <%= form_for(:insertion, url: edit_insertion_path(insertion)) do |f| %>
          <%= f.hidden_field :seller_id, value: Seller.find_by(user_id: @user).id %>
          <div class="row">
            <div class="col-9">
              <div class="form-floating mb-3">
                <%= f.text_field :title, class: "form-control", placeholder: "title", value: insertion.title %>
                <%= f.label :title %>
              </div>
            </div>
            <div class="col-3">
              <div class="form-floating">
                <%= f.number_field :price, class: "form-control", placeholder: "price", value: insertion.price %>
                <%= f.label :price %>
              </div>
            </div>
          </div>
          <div class="form-floating mb-3">
            <%= f.text_area :description, class: "form-control", placeholder: "description", style: "height: 400px;", value: insertion.description %>
            <%= f.label :description %>
          </div>
          <div class="row mb-3">
            <div class="col">          
              <%= f.select :categories, Insertion.categories, { selected: Insertion.categories[insertion.categories] }, { class: "form-select" } %>
            </div>
            <div class="col">
              <%= f.file_field :image %>
            </div>
          </div>
          <%= f.submit "Continua", class: "modal-btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
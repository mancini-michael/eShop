<div class="modal fade" id="edit_meeting" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <button class="btn-close m-0" data-bs-dismiss="modal" aria-label="Close"></button>
        <h5 class="modal-title mx-auto">
          <span class="fw-bold">Prenota incontro</span>
        </h5>
      </div>
      <div class="modal-body py-4">
        <div class="mb-3">
          <h5 class="mb-0">Seleziona una data e un luogo</h5>
          <%= form_for(:meeting, url: edit_meeting_path(meeting.id), class: "mt-4") do |f| %>
            <%= f.hidden_field :owner?, value: meeting.insertion.seller_id == Seller.find_by(user_id: current_user).id if Seller.find_by(user_id: current_user) %>
            <%= f.hidden_field :user, value: current_user.id %>
            <div class="d-flex flex-column">
              <div class="d-flex align-items-center justify-content-between gap-2 mb-3">
                <span class="fw-bold"><%= meeting.date.strftime('%A, %m %B %Y, %H:%M') %></span>
                <%= f.datetime_local_field :date, class: "form-control" %>
              </div>
              <div class="d-flex align-items-center justify-content-between gap-2 mb-3">
                <span class="fw-bold"><%= meeting.place %></span>
                <%= f.text_field :place, class: "form-control"%>
              </div>
            </div>
            </div>
            <%= f.submit "Aggiorna", class: "modal-btn p-2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
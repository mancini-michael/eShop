<div class="modal fade" id="modal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <button class="btn-close m-0" data-bs-dismiss="modal" aria-label="Close"></button>
        <h5 class="modal-title mx-auto">
          <span class="fw-bold">Accedi o registrati</span>
        </h5>
      </div>
      <div class="modal-body py-4">
        <div class="mb-3">
          <h5 class="mb-0">Benvenuto su Commerce</h5>
        </div>
        <%= form_for(:user, url: session_path(:user), html: { class: "login-form" }) do |f| %>
          <div class="form-floating">
            <%= f.email_field :email, class: "form-control", placeholder: "name@example.com" %>
            <%= f.label :email %>
          </div>
          <div class="form-floating mb-3">
            <%= f.password_field :password, class: "form-control", placeholder: "password" %>
            <%= f.label :password %>
          </div>
          <%= f.submit "Continua", class: "modal-btn p-2" %>
        <% end %>
        <div class="d-flex justify-content-center align-items-center">
          <hr class="w-100 mx-3"/>
          <span class="fw-light">oppure</span>
          <hr class="w-100 mx-3"/>
        </div>
        <div class="d-flex justify-content-center flex-column">
          <%= link_to "#", class: "position-relative other-btn text-center p-2" do %>
            <div class="position-absolute top-50 start-25 translate-middle ms-3">
              <svg viewBox="0 0 24 24" style="width: 20px; height: 20px;" xmlns="http://www.w3.org/2000/svg">
                <g transform="matrix(1, 0, 0, 1, 27.009001, -39.238998)">

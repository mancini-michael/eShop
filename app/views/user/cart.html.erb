<div class="my-3">
  <span class="fw-bold">Il tuo carrello</span>
  <% if @cart.length == 0 %>
    <h6 class="mt-3">Nessun elemento</h6>
  <% end %>
</div>
<div class="row row-cols-4">
  <% @cart.each do |insertion| %>
    <div class="col mb-4">
      <%= render "shared/insertion", insertion: Insertion.find(insertion.insertion_id) %>
    </div>
  <% end %>
</div>

